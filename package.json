{
  "name": "@ralph/ralph-storefront",
  "version": "1.0.0",
  "description": "PWA frontend for Geins Commerce",
  "author": "Geins Commerce",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build --modern=server",
    "start": "nuxt start --modern=server",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "stats": "set NODE_ENV=development && yarn nuxt build --modern=server --analyze",
    "link-ralph": "npm link @ralph/ralph-ui",
    "ralph-ride": "node ./scripts/ralph-ride.cjs",
    "ralph-create": "node ./scripts/ralph-create.cjs",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint",
    "*.{css,vue}": "stylelint"
  },
  "dependencies": {
    "@apollo/client": "^3.5.8",
    "@nuxtjs/apollo": "4.0.1-rc.5",
    "@nuxtjs/i18n": "^7.3.1",
    "@nuxtjs/pwa": "^3.3.5",
    "@ralph/ralph-ui": "20.0.2",
    "apollo-link": "^1.2.14",
    "cookie": "^0.5.0",
    "cookie-universal-nuxt": "^2.2.2",
    "nuxt": "^2.15.8",
    "nuxt-user-agent": "^1.2.2",
    "vue-slide-up-down": "^2.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/runtime-corejs3": "^7.22.10",
    "@nuxt/postcss8": "^1.1.3",
    "@nuxtjs/eslint-config": "^12.0.0",
    "@nuxtjs/eslint-module": "^3.1.0",
    "@nuxtjs/router": "^1.7.0",
    "@nuxtjs/style-resources": "^1.2.1",
    "@nuxtjs/stylelint-module": "^4.2.0",
    "babel-eslint": "^10.0.1",
    "core-js": "^3.32.0",
    "cross-fetch": "^4.0.0",
    "csv-parser": "^3.0.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "file-save": "^0.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "prompts": "^2.4.2",
    "sass": "^1.49.9",
    "sass-loader": "^10.2.1",
    "stylelint": "^13.13.1",
    "svg-inline-loader": "^0.8.2",
    "uppercamelcase": "^3.0.0"
  }
}
