{
  "name": "@ralph/ralph-storefront",
  "version": "1.0.0",
  "description": "PWA frontend for Geins Commerce",
  "author": "Geins Commerce",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build --modern=server",
    "start": "nuxt start --modern=server",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "stats": "set NODE_ENV=development && yarn nuxt build --modern=server --analyze",
    "link-ralph": "npm link @ralph/ralph-ui",
    "ralph-ride": "node ./scripts/ralph-ride.cjs",
    "ralph-create": "node ./scripts/ralph-create.cjs"
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxtjs/apollo": "4.0.1-rc.4",
    "@nuxtjs/applicationinsights": "^1.2.2",
    "@nuxtjs/gtm": "^2.4.0",
    "@nuxtjs/i18n": "^7.2.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@ralph/ralph-ui": "19.3.0",
    "apollo-link": "^1.2.14",
    "cookie": "^0.4.2",
    "cookie-universal-nuxt": "^2.1.5",
    "express": "^4.17.2",
    "nuxt": "^2.15.8",
    "nuxt-user-agent": "^1.2.2",
    "vue-slide-up-down": "^2.0.1",
    "vuex-persist": "^3.1.3"
  },
  "devDependencies": {
    "@apollo/client": "^3.5.8",
    "@babel/runtime-corejs3": "^7.17.0",
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.2.0",
    "@nuxtjs/html-validator": "^0.2.2",
    "@nuxtjs/router": "^1.7.0",
    "@nuxtjs/style-resources": "^1.2.1",
    "@nuxtjs/stylelint-module": "^3.1.0",
    "@vue/test-utils": "^1.3.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.6.3",
    "core-js": "^3.21.0",
    "cross-fetch": "^3.1.5",
    "csv-parser": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-nuxt": "^0.5.2",
    "file-save": "^0.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "prettier": "^1.19.1",
    "prompts": "^2.4.2",
    "sass-loader": "^10.2.1",
    "stylelint": "^13.13.1",
    "svg-inline-loader": "^0.8.2",
    "uppercamelcase": "^3.0.0",
    "vue-jest": "^4.0.1"
  }
}
